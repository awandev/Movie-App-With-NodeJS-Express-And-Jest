<%- include('partials/header') -%>

    <div class="container mt-5">
        <table width="100%" cellspacing="0" class="table table-bordered" id="dataTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Salary</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach((employee) => { %>
                    <tr>
                        <td><%= employee.name %></td>
                        <td><%= employee.designation %></td>
                        <td><%= employee.salary %></td>
                        <td><a href="/edit/<%= employee.id %>" class="btn btn-primary">Edit</a>
                            
                        </td>
                    </tr>
                <%})%>
                
            </tbody>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Salary</th>
                    <th>Operations</th>
                </tr>
            </tfoot>
        </table>
    </div>

<%- include('partials/footer') -%>

    